{
  "name": "srbaxter.github.io",
  "version": "1.1.0",
  "description": "Savanna's personal portfolio site",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "version:major": "npm version major",
    "version:minor": "npm version minor",
    "version:patch": "npm version patch",
    "cssprefix": "postcss css/*.css -u autoprefixer -d dist/css/",
    "cssmin": "cleancss -o dist/css/styles.min.css dist/css/styles.css",
    "csslint": "stylelint \"css/**/*.css\" --fix",
    "uglify": "uglifyjs -o dist/js/scripts.min.js js/scripts.js",
    "imagemin": "imagemin --out-dir=dist/img images/**/*.*",
    "watch:css": "onchange \"css/**/*.css\" -- npm run build:css",
    "watch:js": "onchange \"js/**/*.js\" -- npm run build:js",
    "watch": "npm-run-all --parallel watch:*",
    "clean": "rimraf dist/* && rimraf dist && mkdir dist && mkdir dist\\css && mkdir dist\\js && mkdir dist\\img",
    "build:css": "npm run csslint && npm run cssprefix && npm run cssmin",
    "build:js": "npm run uglify",
    "build:img": "npm run imagemin",
    "build": "npm run build:css && npm run build:js && npm run build:img",
    "prebuild": "npm run clean",
    "push:origin": "git push --tags origin HEAD:master"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/srbaxter/srbaxter.github.io.git"
  },
  "keywords": [
    "front-end",
    "web",
    "developer",
    "programming",
    "development"
  ],
  "author": "Savanna Baxter",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/srbaxter/srbaxter.github.io/issues"
  },
  "homepage": "https://github.com/srbaxter/srbaxter.github.io#readme",
  "devDependencies": {
    "autoprefixer": "^9.7.3",
    "clean-css-cli": "^4.3.0",
    "imagemin-cli": "^5.0.0",
    "npm-run-all": "^4.1.5",
    "onchange": "^6.1.0",
    "postcss-cli": "^6.1.3",
    "rimraf": "^3.0.0",
    "stylelint": "^12.0.0",
    "stylelint-config-recommended": "^3.0.0",
    "uglify-js": "^3.7.1"
  }
}
